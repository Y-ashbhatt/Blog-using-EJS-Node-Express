<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Site</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1 class="mb-2">Hello</h1>
      <h3 class="mb-4">Welcome to the blog site!</h3>
      <a href="/articles/new" class="btn btn-success">New Article</a>

      <% articles.forEach(article => { %>
      <div class="card mt-4">
        <div class="card-body">
          <div class="card-title"><%= article.title %></div>
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2"><%= article.description %></div>
          <a
            href="articles/<%= articles.indexOf(article) %>"
            class="btn btn-primary"
            >Read More</a
          >
          <form class="d-inline" action="/articles/<%= articles.indexOf(article) %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
